<?xml version="1.0"?>
<ruleset name="My Laravel Ruleset"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                       http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                       http://pmd.sf.net/ruleset_xml_schema.xsd"
>

    <description>
        Custom ruleset for Laravel project.
    </description>

    <!-- Import built-in rulesets -->
<!--    <rule ref="rulesets/codesize.xml"/>-->
    <!-- Load all codesize rules, but exclude the original TooManyPublicMethods -->
    <rule ref="rulesets/codesize.xml">
        <exclude name="TooManyPublicMethods"/>
        <exclude name="CyclomaticComplexity"/>
        <exclude name="ExcessiveClassComplexity"/>
    </rule>

    <!-- Re-add TooManyPublicMethods with custom config -->
    <rule ref="rulesets/codesize.xml/TooManyPublicMethods">
        <properties>
            <property name="maxmethods" value="20"/>
        </properties>
    </rule>
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="13"/>
        </properties>
    </rule>
    <rule ref="rulesets/codesize.xml/ExcessiveClassComplexity">
        <properties>
            <property name="maximum" value="78"/>
        </properties>
    </rule>

    <rule ref="rulesets/cleancode.xml">
        <exclude name="StaticAccess"/>
        <exclude name="ElseExpression" />
        <exclude name="BooleanArgumentFlag" />
    </rule>
    <rule ref="rulesets/controversial.xml">
            <exclude name="CamelCaseVariableName" />
            <exclude name="CamelCaseParameterName" />
    </rule>

    <rule ref="rulesets/design.xml">
        <exclude name="CouplingBetweenObjects"/>
        <exclude name="NumberOfChildren"/>
    </rule>
    <rule ref="rulesets/design.xml/CouplingBetweenObjects">
        <properties>
            <property name="maximum" value="21"/>
        </properties>
    </rule>


    <rule ref="rulesets/naming.xml"/>
    <rule ref="rulesets/unusedcode.xml"/>

    <!-- You can also add specific rules or exclude files/directories here -->
    <!-- <exclude name="path/to/excluded/file.php"/> -->
    <!-- <exclude-pattern>vendor/*</exclude-pattern> -->

</ruleset>
